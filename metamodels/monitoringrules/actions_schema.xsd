<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:ac="http://www.modaclouds.eu/xsd/1.0/actions_schema" targetNamespace="http://www.modaclouds.eu/xsd/1.0/actions_schema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="actions">
		<xs:annotation>
			<xs:documentation>A list of actions</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="action" type="ac:actionDescription" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:simpleType name="actionString">
		<xs:restriction base="xs:string">
			<xs:pattern value="[a-zA-Z_][a-zA-Z_0-9]*"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="actionDescription">
		<xs:simpleContent>
			<xs:extension base="ac:actionString">
				<xs:attribute name="nParams" type="xs:nonNegativeInteger" use="required"/>
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="action">
		<xs:sequence>
			<xs:element name="parameter" type="xs:anySimpleType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="targetRuleID" type="xs:IDREF" use="optional"/>
		<xs:attribute name="actionID" type="ac:actionString" use="required"/>
	</xs:complexType>
</xs:schema>
